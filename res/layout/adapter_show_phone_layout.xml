<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="5dp" >

    <RadioGroup
        android:id="@+id/adapter_show_phone_rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/adapter_show_phone_rb1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_phone_color_selector"
            android:button="@color/clear"
            android:checked="false"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/normal_purple"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/adapter_show_phone_rb2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_phone_color_selector"
            android:button="@color/clear"
            android:checked="false"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/normal_purple"
            android:textSize="16sp" />
    </RadioGroup>

</LinearLayout>