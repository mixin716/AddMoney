<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_item_normal_bg"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/activity_register_et_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="手机号"
                android:inputType="phone"
                android:padding="13dp"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#dddddd" />

            <EditText
                android:id="@+id/activity_register_et_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="登录密码"
                android:padding="13dp"
                android:password="true"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#dddddd" />

            <EditText
                android:id="@+id/activity_register_et_pwdsecond"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="确认密码"
                android:padding="13dp"
                android:password="true"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_register_et_check"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_item_normal_bg"
                android:hint="短信验证码"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_normal_white_selector"
                android:paddingBottom="13dp"
                android:paddingTop="13dp" >

                <Button
                    android:id="@+id/activity_register_bt_send"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="发送验证码"
                    android:textColor="@color/normal_purple" />

                <TextView
                    android:id="@+id/activity_register_tv_check"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30秒后重发"
                    android:textColor="@color/normal_purple"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/activity_register_bt_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_normal_red_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="立即注册"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>