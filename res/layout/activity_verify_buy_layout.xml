<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_product_detail_top_view_background"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_verify_buy_tv_name"
            style="@style/wrap"
            android:paddingTop="10dp"
            android:text="基金名称"
            android:textColor="@color/text_deep"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap"
                    android:text="购买金额："
                    android:textColor="@color/text_deep"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_verify_buy_tv_money"
                    style="@style/wrap"
                    android:text="100元"
                    android:textColor="@color/normal_red"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <TextView
                    style="@style/wrap"
                    android:text="手续费："
                    android:textColor="@color/text_deep"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_verify_buy_tv_hand"
                    style="@style/wrap"
                    android:text="0"
                    android:textColor="@color/text_deep"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activity_verify_buy_rl_select_bank"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_item_normal_bg"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/activity_verify_buy_tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择银行卡"
            android:textColor="@color/text_light"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_home_grey_arrow_down" />
    </RelativeLayout>

    <EditText
        android:id="@+id/activity_verify_buy_et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_item_normal_bg"
        android:hint="输入交易密码"
        android:padding="10dp"
        android:textColor="@color/text_deep"
        android:password="true"
        android:textColorHint="@color/text_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/activity_verify_buy_bt_buy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_normal_red_selector"
        android:gravity="center"
        android:padding="10dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="确认购买"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="您在工作日15：00前购买会在下一个工作日确认"
        android:textColor="@color/text_light"
        android:textSize="13sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="15：00之后的购买会顺延一个工作日确认"
        android:textColor="@color/text_light"
        android:textSize="13sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="节假日交易会顺延至节后工作日统一处理"
        android:textColor="@color/text_light"
        android:textSize="13sp" />

</LinearLayout>