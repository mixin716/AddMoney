<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/activity_product_list_ll_person"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_radiobutton_item_normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/activity_product_list_tv_person"
                style="@style/wrap"
                android:text="购买人数"
                android:textColor="@color/normal_purple"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/activity_product_list_img_person"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_product_list_arrow_bttom_press" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_product_list_ll_wf"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_radiobutton_item_normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/activity_product_list_tv_wan"
                style="@style/wrap"
                android:text="万份收益"
                android:textColor="@color/text_light"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/activity_product_list_img_wan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_product_list_arrow_bttom_normal" />
        </LinearLayout>

        <!-- 收益率 -->

        <LinearLayout
            android:id="@+id/activity_product_list_ll_rate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_radiobutton_item_normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/activity_product_list_tv_rate"
                style="@style/wrap"
                android:text="收益率"
                android:textColor="@color/text_light"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/activity_product_list_img_rate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_product_list_arrow_bttom_normal" />
        </LinearLayout>
    </LinearLayout>

    <com.zc.addmony.views.XListView
        android:id="@+id/activity_product_list_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000" >
    </com.zc.addmony.views.XListView>

</LinearLayout>