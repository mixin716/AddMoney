<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_product_detail_top_view_background"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="手机型号:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/activity_confirmation_order_tv_phone_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text_light"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="颜色:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/activity_confirmation_order_tv_phonecolor"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text_light"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="套餐:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/activity_confirmation_order_tv_package"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text_light"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="号码归属地:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/activity_confirmation_order_tv_phone_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text_light"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:text="手机号码:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/activity_confirmation_order_tv_phone_select"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text_light"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_item_normal_bg"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:gravity="right"
                    android:text="配送地址:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/match_wrap"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/activity_confirmation_order_et_province"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_activities_input_normal"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:singleLine="true"
                            android:textColor="@color/text_deep"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/activity_confirmation_order_et_city"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_activities_input_normal"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:singleLine="true"
                            android:textColor="@color/text_deep"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/activity_confirmation_order_et_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ic_activities_input_normal"
                        android:gravity="top"
                        android:lines="3"
                        android:paddingBottom="3dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:textColor="@color/text_deep"
                        android:textSize="17sp" />
                </LinearLayout>

                <TextView
                    style="@style/wrap"
                    android:layout_marginRight="10dp"
                    android:text="*"
                    android:textColor="@color/normal_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:gravity="right"
                    android:text="联系号码:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/activity_confirmation_order_et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/ic_activities_input_normal"
                    android:gravity="left"
                    android:inputType="phone"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <TextView
                    style="@style/wrap"
                    android:layout_marginRight="10dp"
                    android:text="*"
                    android:textColor="@color/normal_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:gravity="right"
                    android:text="买家备注:"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/activity_confirmation_order_et_remark"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/ic_activities_input_normal"
                    android:gravity="left"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:textColor="@color/text_deep"
                    android:textSize="17sp" />

                <TextView
                    style="@style/wrap"
                    android:layout_marginRight="10dp"
                    android:text="*"
                    android:textColor="@color/normal_red" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/activity_confirmation_order_cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/bg_activities_check_selector"
            android:text="  我同意《XX协议》"
            android:textColor="@color/text_deep"
            android:textSize="17sp" />

        <Button
            android:id="@+id/activity_confirmation_order_bt_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_normal_red_selector"
            android:padding="10dp"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>